<section>
  <div class="container ">
    <div class="row justify-content-center">
    <h2 class="section-title">新規にゃんこデータ作成</h2>
    <% if @cat.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @cat.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="regist_form">
        <%= render partial: "form", locals: { thing: @cat } %>
      </div>
    </div>
  </div>
</section>
