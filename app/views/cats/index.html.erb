<section class="section">
  <div class="container">
    <h2 class="section-title">にゃんこデータ一覧</h2>
    <div class="card-box">
      <div class="col df pt-5">
        <% @cats.each do |cat| %>
          <div class="col-md-4 p-2">
            <div class="card">
              <div class="card-img">
                <%= link_to image_tag cat.image_id.to_s, width: '100%', height: '100%' %>
              </div>
              <div class="card-body">
                <h4 class="card-title"><%= cat.catname %></h4>
                <div class="content">
                  <table class="table">
                    <tr>
                      <th>アピールポイント</th>
                    </tr>
                    <tr>
                      <td><%= simple_format cat.appeal_point %></td>
                      <%# <td><%=link_to cat.user.username, user_path(cat.user) %></td> %>
                    </tr>
                  </table>
                  <div class="button-position">
                    <%= link_to "詳細を見る" ,cat_path(cat), class: 'btn btn-success' %>
                    <%= link_to '削除', cat, method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"},class: 'btn btn-danger' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>