      <%= form_for @cat do |f| %>
        <div class="form-group p-2 m-2">
          <%= f.label :catname %>
          <%= f.text_field :catname, class: "form-control" %>
        </div>

        <div class="form-group p-2 m-2">
          <%= f.label :appeal_point %>
          <%= f.text_field :appeal_point, class: "form-control" %>
        </div>

        <div class="form-group p-2 m-2">
          <%= f.label :image_id %>
          <%= f.file_field :image_id, class: "form-control" %>
        </div>

        <div class="form-group p-2 m-2">
          <%= f.button button_text, class: 'btn btn-success' %>
          <%= link_to "戻る", :back , class: "btn btn-success"%>
        </div>
      <% end %>