<section>
  <div class="container">
    <div class="row justify-content-center">
      <h2 class="section-title">ユーザーデータ編集</h2>
      <div class="regist_form">
      <% if @user.errors.any? %>
        <div class="devise-sign-up-error">
          <h2><%= t("errors.template.header", model: User.model_name.human, count: @user.errors.count) %></h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @user do |f| %>
        <div class="form-group p-2 m-2">
          <%= f.label :username, "ユーザー名", class: "label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>

        <div class="form-group p-2 m-2">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group p-2 m-2">
          <%= f.label :profile, "プロフィール", class: "label" %>
          <%= f.text_area :profile, class: "form-control" %>
        </div>

        <div class="form-group p-2 m-2">
          <%= f.label :profile_image_id, "プロフィール画像", class: "label" %>
          <%= f.file_field :profile_image_id, class: "form-control" %>
        </div>

        <%= f.submit "更新", class: "btn btn-warning" %>
        <%= link_to "戻る", :back , class: "btn btn-warning"%>
      <% end %>
      </div>
    </div>
  </div>
</section>